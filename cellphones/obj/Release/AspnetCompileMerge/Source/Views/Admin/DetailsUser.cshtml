@model cellphones.Models.User
@{
    ViewBag.Title = "User Details";
}

<div class="container">
    <div class="user-profile-card">
        <div class="profile-header">
            <h2>User Details</h2>
            <div class="user-actions">
                <a href="@Url.Action("EditUser", new { id = Model.UserID })" class="btn btn-primary">Edit Profile</a>
                <a href="@Url.Action("Index")" class="btn btn-outline">Back to List</a>
            </div>
        </div>

        <div class="profile-content">
            <div class="profile-sidebar">
                <div class="profile-image">
                    @if (!string.IsNullOrEmpty(Model.imageUser))
                    {
                        <img src="@Model.imageUser" alt="@Model.FullName" />
                    }
                    else
                    {
                        <div class="profile-image-placeholder">
                            <span>@Model.FullName.Substring(0, 1).ToUpper()</span>
                        </div>
                    }
                </div>
                <h3>@Model.FullName</h3>
                <div class="rank-badge @Model.RankUser.ToLower()">
                    @Model.RankUser
                </div>
                <div class="profile-stats">
                    <div class="stat-item">
                        <span class="stat-label">Total Spent</span>
                        <span class="stat-value">@string.Format("{0:N0}", Model.spent) đ</span>
                    </div>
                </div>
            </div>

            <div class="profile-details">
                <div class="detail-section">
                    <h4>Account Information</h4>
                    <div class="detail-item">
                        <span class="detail-label">Username</span>
                        <span class="detail-value">@Model.Username</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Email</span>
                        <span class="detail-value">@Model.Email</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Role</span>
                        <span class="detail-value">@Model.Role</span>
                    </div>
                </div>

                <div class="detail-section">
                    <h4>Contact Information</h4>
                    <div class="detail-item">
                        <span class="detail-label">Phone</span>
                        <span class="detail-value">@Model.Phone</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Address</span>
                        <span class="detail-value">@Model.Address</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .user-profile-card {
        background-color: #fff;
        overflow: hidden;
    }

    .profile-header {
        padding: 20px 30px;
        background-color: #f8f9fa;
        border-bottom: 1px solid #eaeaea;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .profile-header h2 {
        margin: 0;
        color: #333;
        font-weight: 600;
    }

    .user-actions {
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0069d9;
    }

    .btn-outline {
        background-color: transparent;
        color: #6c757d;
        border: 1px solid #6c757d;
    }

    .btn-outline:hover {
        background-color: #f8f9fa;
    }

    .profile-content {
        display: flex;
        padding: 30px;
    }

    .profile-sidebar {
        width: 240px;
        padding-right: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-right: 1px solid #eaeaea;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 15px;
        border: 5px solid #f8f9fa;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .profile-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-image-placeholder {
        width: 100%;
        height: 100%;
        background-color: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .profile-image-placeholder span {
        font-size: 60px;
        color: #6c757d;
    }

    .profile-sidebar h3 {
        margin: 0 0 10px 0;
        color: #333;
        font-weight: 600;
        text-align: center;
    }

    .rank-badge {
        display: inline-block;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    .rank-badge.silver {
        background-color: #f5f5f5;
        color: #666;
        border: 1px solid #ccc;
    }

    .rank-badge.gold {
        background-color: #fff9e6;
        color: #e6a800;
        border: 1px solid #ffd700;
    }

    .rank-badge.platinum {
        background-color: #e6f7ff;
        color: #0070c0;
        border: 1px solid #00bfff;
    }

    .profile-stats {
        width: 100%;
        margin-top: 10px;
    }

    .stat-item {
        padding: 10px 0;
        text-align: center;
    }

    .stat-label {
        display: block;
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 5px;
    }

    .stat-value {
        display: block;
        font-size: 18px;
        font-weight: 600;
        color: #333;
    }

    .profile-details {
        flex: 1;
        padding-left: 30px;
    }

    .detail-section {
        margin-bottom: 30px;
    }

    .detail-section h4 {
        color: #333;
        font-weight: 600;
        margin: 0 0 15px 0;
        padding-bottom: 10px;
        border-bottom: 1px solid #eaeaea;
    }

    .detail-item {
        display: flex;
        margin-bottom: 15px;
    }

    .detail-label {
        width: 120px;
        font-weight: 500;
        color: #6c757d;
    }

    .detail-value {
        flex: 1;
        color: #333;
    }

    @@media (max-width: 768px) {
        .profile-content {
            flex-direction: column;
        }

        .profile-sidebar {
            width: 100%;
            border-right: none;
            border-bottom: 1px solid #eaeaea;
            padding-right: 0;
            padding-bottom: 30px;
            margin-bottom: 30px;
        }

        .profile-details {
            padding-left: 0;
        }
    }
</style>